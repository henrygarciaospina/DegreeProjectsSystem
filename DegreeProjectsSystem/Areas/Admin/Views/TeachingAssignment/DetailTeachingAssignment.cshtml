@model DegreeProjectsSystem.Models.ViewModels.DetailsTeachingAssignmentView
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var degreeWork = "Datos trabajo de grado";
    var assignedTeacher = "Datos docentes";
}

<div class="container-fluid">
    <div class="container-detail mt-3">
        <div class="card-detail ml-1">
            <div class="col-12 border-bottom mt-3 px-2">
                <h2 class="text-primary">@degreeWork</h2>
            </div>

            <div class="row mt-2 px-2">
                <div class="col-sm-6">
                    <label class="fw-bold" asp-for="Solicitude.TitleDegreeWork"></label>
                    <input asp-for="Solicitude.TitleDegreeWork" disabled class="form-control" />
                </div>
                <div class="col-sm-6">
                    <label class="fw-bold" asp-for="Solicitude.ActNumber"></label>
                    <input asp-for="Solicitude.ActNumber" disabled class="form-control" />
                </div>
                <div class="col-sm-6">
                    <label class="fw-bold" asp-for="Solicitude.ActDate"></label>
                    @Html.TextBoxFor(model => model.Solicitude.ActDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                </div>
                <div class="col-sm-6">
                    <label class="fw-bold" asp-for="Solicitude.Observations"></label>
                    <textarea asp-for="Solicitude.Observations" disabled class="form-control" rows="4">
 </textarea>
                </div>
            </div>
            <div class="col-12 border-bottom mt-3 px-2">
                <h2 class="text-primary">@assignedTeacher</h2>
            </div>
            <div class="container">
                <div class="row mt-2 px-2">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Cargo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @foreach (var item in Model.Teachers)
                                    {
                                        <p>@item.FullName</p>

                                    }
                                </td>
                                <td>
                                    @foreach (var item in Model.TeachingFunctions)
                                    {
                                        <p>@item.Name</p>

                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="form-group row mb-1 mt-3">
            <div class="col-8 offset-2">
                <div class="row">
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">
                            <i class="far fa-hand-point-left"><span class="px-2 font-menu">Regresar</span></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>