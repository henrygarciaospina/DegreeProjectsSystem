@model DegreeProjectsSystem.Models.ViewModels.InstitutionViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Detalle Institución";
}

<form class="form-horizontal">
    <div class="row p-3 border-0">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
   
    <div class="container">
        <div class="container-detail mt-2">
            <div class="card-detail">
                <div class="col-12 border-bottom mt-2 px-3">
                    <h2 class="text-primary">@title</h2>
                </div>

                <div class="row mt-2 px-3">
                    <div class="col-sm-6">
                        <label asp-for="Institution.Name"></label>
                        <input asp-for="Institution.Name" class="form-control" placeholder="Ejemplo: Ingenieros y Asociados SAS" disabled />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Institution.InstitutionType"></label>
                        @Html.DropDownListFor(i => i.Institution.InstitutionTypeId, Model.InstitutionTypeList,
                            "Seleccione un Tipo de Institución....", new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="row px-3">
                    <div class="col-sm-6">
                        <label asp-for="Institution.Nit"></label>
                        <input asp-for="Institution.Nit" class="form-control" placeholder="Ejemplo:  800.197.268-4" disabled />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Institution.Email"></label>
                        <input asp-for="Institution.Email" class="form-control" placeholder="Ejemplo: rrhh@ingenieros.asociados.com" disabled />
                    </div>
                </div>

                <div class="row px-3">
                    <div class="col-sm-6">
                        <label asp-for="Institution.Phone"></label>
                        <input asp-for="Institution.Phone" class="form-control" placeholder="Ejemplo: 2801203" disabled />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Institution.Observations"></label>
                        <textarea asp-for="Institution.Observations" class="form-control" rows="4" disabled>
                </textarea>
                    </div>
                </div>
                <div class="row px-3">
                    <div class="col-8 offset-2">
                        <label asp-for="Institution.Active"></label>
                    </div>
                    <div class="col-8 offset-2 mb-3">
                        <select asp-for="Institution.Active" class="form-control" disabled>
                            <option value=true>Activo</option>
                            <option value=false>Inactivo</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group row mb-1 px-3">
                <div class="col-8 offset-2">
                    <a asp-action="Index" class="btn btn-success form-control">
                        <i class="far fa-hand-point-left"><span class="ml-1 font-menu">Regresar</span></i>
                    </a>
                </div>
            </div>
        </div>
    </div>           
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}