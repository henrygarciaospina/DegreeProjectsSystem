@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary mt-5"> Correos Personas </h2>
    </div>
    <div class="col-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary mt-5" asp-action="InsertOrUpdateEmailPerson"> <i class="fas fa-plus"></i> Crear Correo Persona</a>
    </div>
</div>

<br />

<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%;">
        <thead class="">
            <tr class="table-info text-center">
                <th>Correo</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Observaciones</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/email_person.js"></script>
}