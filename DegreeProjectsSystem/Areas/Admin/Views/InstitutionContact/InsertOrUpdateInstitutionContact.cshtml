@model DegreeProjectsSystem.Models.ViewModels.InstitutionContactViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Crear Contacto Institución";
}

<form class="form-horizontal" role="form" method="post">
    <div class="row p-3 border-0">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    @if (Model.InstitutionContact.Id != 0)
    {
        // Actualizar
        title = "Actualizar Contacto Institución";
        <input type="hidden" asp-for="InstitutionContact.Id" />
    }


    <div class="container">
        <div class="col-12 border-bottom mt-5">
            <h2 class="text-primary">@title</h2>
        </div>

        <div class="row mt-2">
            <div class="col-sm-6">
                <label asp-for="InstitutionContact.Institution"></label>
                @Html.DropDownListFor(i => i.InstitutionContact.InstitutionId, Model.InstitutionList,
                "Seleccione una Institución....",
                new { @class = "form-control" })
                <span asp-validation-for="InstitutionContact.InstitutionId" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="InstitutionContact.InstitutionContactCharge"></label>
                @Html.DropDownListFor(icc => icc.InstitutionContact.InstitutionContactChargeId, Model.InstitutionContactChargeList,
                "Seleccione cargo del contacto....",
                new { @class = "form-control" })
                <span asp-validation-for="InstitutionContact.InstitutionContactChargeId" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label asp-for="InstitutionContact.Person"></label>
                @Html.DropDownListFor(icc => icc.InstitutionContact.PersonId, Model.PersonList,
                "Seleccione un contacto....",
                new { @class = "form-control" })
                <span asp-validation-for="InstitutionContact.PersonId" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="InstitutionContact.Active"></label>
                <select asp-for="InstitutionContact.Active" class="form-control">
                    <option value=true>Activo</option>
                    <option value=false>Inactivo</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-group row mb-1 mt-3">
        <div class="col-8 offset-2">
            @if (Model.InstitutionContact.Id != 0)
            {
                <partial name="_ButtonsUpdateAndReturn" model="Model.InstitutionContact.Id" />
            }
            else
            {
                <partial name="_ButtonsCreateAndReturn" />
            }
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}