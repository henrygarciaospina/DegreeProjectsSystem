@model DegreeProjectsSystem.Models.ViewModels.InstitutionContactViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Detalle Contacto Institución";
}

<div class="container-fluid">
    <div class="container-detail mt-3">
        <div class="card-detail ml-1">
            <div class="col-12 border-bottom mt-3 px-2">
                <h2 class="text-primary">@title</h2>
            </div>

            <div class="row mt-2 px-2">
                <div class="col-sm-6">
                    <label class="fw-bold" asp-for="InstitutionContact.Institution"></label>
                    @Html.DropDownListFor(i => i.InstitutionContact.InstitutionId, Model.InstitutionList,
                    "Seleccione una Institución....",
                    new { @class = "form-control", @disabled = "disabled" })
                    <span asp-validation-for="InstitutionContact.InstitutionId" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label class="fw-bold" asp-for="InstitutionContact.InstitutionContactCharge"></label>
                    @Html.DropDownListFor(icc => icc.InstitutionContact.InstitutionContactChargeId, Model.InstitutionContactChargeList,
                    "Seleccione cargo del contacto....",
                    new { @class = "form-control", @disabled = "disabled" })
                    <span asp-validation-for="InstitutionContact.InstitutionContactChargeId" class="text-danger"></span>
                </div>
            </div>
            <div class="row px-2">
                <div class="col-sm-6">
                    <label class="fw-bold" asp-for="InstitutionContact.Person"></label>
                    @Html.DropDownListFor(icc => icc.InstitutionContact.PersonId, Model.PersonList,
                    "Seleccione un contacto....",
                    new { @class = "form-control", @disabled = "disabled" })
                    <span asp-validation-for="InstitutionContact.PersonId" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label class="fw-bold" asp-for="InstitutionContact.Active"></label>
                    <select asp-for="InstitutionContact.Active" disabled class="form-control">
                        <option value=true>Activo</option>
                        <option value=false>Inactivo</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row mb-1 mt-3">
            <div class="col-8 offset-2">
                <div class="row">
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success form-control">
                            <i class="far fa-hand-point-left"><span class="px-2 font-menu">Regresar</span></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>